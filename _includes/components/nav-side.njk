{% set navPages = collections.all | eleventyNavigation %}
{% macro renderNavListItem(entry) -%}
<li{% if entry.url == page.url %} class="active-class"{% endif %}>
  <a href="{{ entry.url }}" title="{{ entry.title }}" alt="{{ page.title }}">{{ entry.title }}</a>
      {% if entry.url == "/recipes/main-ingredients/" %}

    <div class="tabs">
      <div class="tab">
        <input type="radio" id="rd1" name="rd">
        <label class="tab-label" for="rd1">Item 1</label>
        <div class="tab-content">
          Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eos, facilis.
        </div>
      </div>
      <div class="tab">
        <input type="radio" id="rd2" name="rd">
        <label class="tab-label" for="rd2">Item 2</label>
        <div class="tab-content">
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Nihil, aut.
        </div>
      </div>
      <div class="tab">
        <input type="radio" id="rd3" name="rd">
        <label for="rd3" class="tab-close">Close others &times;</label>
      </div>
    </div>











    {% endif %}
{%- if entry.children.length -%}
<ul class="second">
    {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
  </ul>
{%- endif -%}
</li>
{%- endmacro %}

<ul class="off-canvas-list">
<li><a href="/" title="Home" alt="Home">Home</a></li>
{%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
<li><a href="/contact/" title="Contact" alt="Contact">Contact</a></li>
</ul>